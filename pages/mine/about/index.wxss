.container {
  position: relative;
}

.container .card {
  overflow: hidden;
  position: relative;
  border-radius: 20px;
  width: 320px;
  height: 450px;
  background: #232323;
}

.container .card::before {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #9bdc28;
  transition: .5s ease-in-out;
  content: '';
  clip-path: circle(150px at 80% 20%);
}

.container .card:hover::before {
  clip-path: circle(300px at 80% -20%);
}

.container .card .img-box {
  position: absolute;
  top: 50%;
  z-index: 1000;
  width: 100%;
  height: 220px;
  transition: .5s;
  transform: translateY(-50%);
}

.container .card:hover .img-box {
  top: 0;
  transform: translateY(0);
}

.container .card .img-box img {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 270px;
  transform: translate(-50%, -50%) rotate(0deg);
}

.container .card .content-box {
  position: absolute;
  bottom: 0;
  z-index: 0;
  width: 100%;
  height: 100px;
  text-align: center;
  transition: 1s;
}

.container .card:hover .content-box {
  height: 210px;
}

.container .card .content-box h2 {
  position: relative;
  font-weight: 600;
  letter-spacing: 1px;
  color: #fff;
}

.container .card .content-box .size,
.container .card .content-box .color {
  display: flex;
  visibility: hidden;
  padding: 8px 20px;
  opacity: 0;
  transition: .5s;
  justify-content: center;
  align-items: center;
}

.container .card:hover .content-box .size {
  visibility: visible;
  opacity: 1;
  transition-delay: .5s;
}

.container .card:hover .content-box .color {
  visibility: visible;
  opacity: 1;
  transition-delay: .6s;
}

.container .card .content-box .size h3,
.container .card .content-box .color h3 {
  margin-right: 10px;
  font-size: 14px;
  font-weight: 300;
  letter-spacing: 2px;
  text-transform: uppercase;
  color: #fff;
}

.container .card .content-box .size span {
  display: inline-block;
  margin: 0 5px;
  border-radius: 4px;
  width: 26px;
  height: 26px;
  font-size: 14px;
  line-height: 26px;
  text-align: center;
  color: #111;
  color: #111;
  background: #fff;
  cursor: pointer;
}

.container .card .content-box .size span:hover {
  background: #9bdc28;
}

.container .card .content-box .color span {
  margin: 0 5px;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  background: #ff0;
  cursor: pointer;
}

.container .card .content-box .color span:nth-child(2) {
  background: #9bdc28;
}

.container .card .content-box .color span:nth-child(3) {
  background: #03a9f4;
}

.container .card .content-box .color span:nth-child(4) {
  background: #e91e63;
}

.container .card .content-box a {
  display: inline-block;
  margin-top: 10px;
  border-radius: 4px;
  padding: 10px 20px;
  font-weight: 600;
  text-decoration: none;
  color: #111;
  background: #fff;
  opacity: 0;
  transition: .5s;
  transform: translateY(50px);
}

.container .card:hover .content-box a {
  opacity: 1;
  transition-delay: .75s;
  transform: translateY(0px);
}
