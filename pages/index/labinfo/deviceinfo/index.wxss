.title {
  margin: var(--margin-24) var(--margin-16);
  font-size: var(--font-24);
  font-weight: 600;
  color: var(--gray-1);
}

.list {
  margin-top: var(--margin-12);
}

.list .list-item {
  display: flex;
  margin: var(--margin-12) var(--margin-16);
  border-radius: var(--radius-8);
  height: 80rpx;
  background-color: var(--blue-background);
  align-items: center;
}

.list .list-item .name {
  margin-left: var(--margin-16);
  font-size: var(--font-14);
  line-height: var(--font-14);
  color: var(--gray-2);
}

.list .list-item .value {
  display: flex;
  margin-right: var(--margin-16);
  font-size: var(--font-12);
  line-height: var(--font-12);
  text-align: right;
  color: var(--gray-3);
  flex: 1;
  justify-content: flex-end;
  align-items: center;
}

.list .list-item .value .icon-pointright {
  width: 16rpx;
  height: 16rpx;
}

.list .list-item .value .red {
  margin-left: var(--margin-4);
  border-radius: var(--radius-12);
  padding: auto;
  width: 110rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: white;
  background-color: var(--red);
}

.list .list-item .value .yellow {
  margin-left: var(--margin-4);
  border-radius: var(--radius-12);
  padding: auto;
  width: 110rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: white;
  background-color: var(--yellow);
}

.device-list {
  display: flex;
  margin: var(--margin-24) var(--margin-4);
  flex-wrap: wrap;
}

.ai-button {
  background-color: var(--red);
}

.footer {
  display: flex;
  position: absolute;
  bottom: 100rpx;
}

.footer .left {
  display: flex;
  width: 50vw;
  height: 32rpx;
  justify-content: center;
  align-items: center;
}

.footer .left .text {
  display: flex;
  font-size: 28rpx;
  color: var(--gray-2);
  justify-content: center;
  align-items: center;
}

.footer .left .text .img {
  width: 32rpx;
  height: 32rpx;
}

.footer .right {
  display: flex;
  width: 50vw;
  height: 32rpx;
  justify-content: center;
  align-items: center;
}

.footer .right .text {
  display: flex;
  font-size: 28rpx;
  color: var(--gray-2);
  justify-content: center;
  align-items: center;
}

.footer .right .text .img {
  width: 32rpx;
  height: 32rpx;
}
