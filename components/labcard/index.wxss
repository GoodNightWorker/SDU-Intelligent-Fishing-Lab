.container {
  display: inline-block;
  overflow: hidden;
  position: relative;
  margin-top: var(--margin-12);
  margin-left: 23rpx;
  border-radius: var(--radius-8);
  width: 332rpx;
  height: 200rpx;
  box-shadow: var(--box-shadow-small);
}

.container .circle {
  position: absolute;
  border-radius: 50%;
  background-color: var(--white-transparent);
}

.container .circle:nth-child(1) {
  top: -24rpx;
  left: -32rpx;
  width: 60rpx;
  height: 60rpx;
}

.container .circle:nth-child(2) {
  bottom: -60rpx;
  left: 80rpx;
  width: 144rpx;
  height: 144rpx;
}

.container .circle:nth-child(3) {
  top: -48rpx;
  left: 280rpx;
  width: 96rpx;
  height: 96rpx;
}

.container .circle:nth-child(4) {
  top: calc(50% - 32rpx/2 + 8rpx);
  left: 416rpx;
  width: 32rpx;
  height: 32rpx;
}

.container .title {
  margin-top: var(--margin-12);
  margin-left: var(--margin-16);
  font-size: var(--font-18);
  font-weight: 600;
  color: white;
}

.container .subtitle {
  display: flex;
  margin-top: 68rpx;
  margin-left: var(--margin-16);
  align-items: center;
}

.container .subtitle .subtitle-icon {
  width: 48rpx;
  height: 48rpx;
}

.container .subtitle .subtitle-text {
  margin-left: 9.46rpx;
  font-size: var(--font-12);
  color: white;
}

.blue {
  background: var(--blue-linear);
}

.yellow {
  background: var(--yellow-linear);
}

.green {
  background: var(--green-linear);
}

.gray {
  background: var(--gray-linear);
}
