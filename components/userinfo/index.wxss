.container {
  overflow: hidden;
  margin: var(--margin-16);
  box-sizing: border-box;
  background: var(--white);
  box-shadow: var(--box-shadow-small);
}

.container .info .line-top {
  margin: 0 var(--margin-16);
  border-top: 1rpx solid var(--gray-4);
  height: 1rpx;
}

.container .info:nth-child(1) {
  margin-top: var(-margin-4);
}

.container .info:nth-child(1) .line-top {
  border: none;
}

.container .info .message {
  display: flex;
  padding: var(--margin-16);
}

.container .info .message .icon {
  width: 40rpx;
  height: 40rpx;
}

.container .info .message .input {
  margin-left: var(--margin-12);
  font-size: var(--font-12);
}

.container .info .message .input-placeholder {
  color: var(--gray-3);
}
