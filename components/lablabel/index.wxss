.container {
  overflow: hidden;
  margin: var(--margin-12);
  border-radius: var(--radius-8);
  height: var(--margin-48);
  background-color: var(--blue-background);
}

.container .label {
  float: left;
  margin: var(--margin-12) var(--margin-16);
  color: var(--gray-2);
}

.container .detail {
  float: right;
  font-size: var(--font-12);
  color: var(--gray-3);
}

.gray {
  margin: var(--margin-16);
}

.red {
  display: table;
  margin: var(--margin-12);
  border-radius: var(--radius-12);
  width: 100rpx;
  height: 48rpx;
  text-align: center;
  background-color: var(--red);
}

.red .text {
  display: table-cell;
  vertical-align: middle;
  color: white;
}

.green {
  display: table;
  margin: var(--margin-12);
  border-radius: var(--radius-12);
  width: 144rpx;
  height: 48rpx;
  text-align: center;
  background-color: var(--green);
}

.green .text {
  display: table-cell;
  vertical-align: middle;
  color: white;
}
