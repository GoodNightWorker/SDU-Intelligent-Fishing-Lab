.ai-button {
  height: 80rpx;
  margin: 0 var(--margin-16);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: var(--blue);
  border-radius: var(--radius-8);
  overflow: hidden;
  box-shadow: var(--box-shadow-small);
  font-style: normal;
  font-weight: bold;
  font-size: var(--font-14);
  line-height: 100%;
  color: var(--white);
}

.ai-button::after {
  border-radius: var(--radius-8);
  border: 0;
}

.ai-button:active {
  text-decoration: underline;
}
